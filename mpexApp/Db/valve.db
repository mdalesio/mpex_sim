## Simulation Records

record ( calcout, "$(SYS):VLV:$(SDEV)_delay" ) {
   field ( DESC, "Delay VLV command" )
   field ( SCAN, "Passive" )
   field ( INPA, "$(SYS):VLV:$(SDEV)_req")
   field ( CALC, "A" )
   field ( ODLY, "1" )
   field ( OUT,  "$(SYS):VLV:$(SDEV)_sts PP" )
}
