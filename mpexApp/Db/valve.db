record ( bo, "$(SYS):VLV:$(SDEV)_req") {
   field ( VAL, 0 )
   field ( SCAN, "Passive" )
   field ( ZNAM, "Request Close" )
   field ( ONAM, "Request Open" )
   field ( FLNK, "$(SYS):VLV:$(SDEV)_delay")
}

record ( bi, "$(SYS):VLV:$(SDEV)_sts" ) {
   field ( VAL, 0 )
   field ( SCAN, "Passive" )
   field ( ZNAM, "Closed" )
   field ( ONAM, "Opened" )
}

